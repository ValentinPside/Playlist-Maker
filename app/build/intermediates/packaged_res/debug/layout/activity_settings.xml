<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Settings" >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/settings_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/vector"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/settings"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center_vertical" />

    </androidx.appcompat.widget.Toolbar>

    <Switch
        android:id="@+id/switch2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:paddingLeft="@dimen/setting_but_padding_left"
        android:paddingRight="@dimen/setting_but_padding_right"
        android:text="@string/dark_style"
        android:textAlignment="viewStart"
        android:textSize="@dimen/setting_but_text_size"
        tools:ignore="UseSwitchCompatOrMaterialXml"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/setting_but_padding_left"
        android:paddingRight="@dimen/setting_but_padding_right"
        android:backgroundTint="@color/but_main_col"
        android:text="@string/share"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/setting_but_text_size"
        app:icon="@drawable/share"
        app:iconGravity="end"
        app:iconTint="@color/settings_icon_color" />

    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/setting_but_padding_left"
        android:paddingRight="@dimen/setting_but_padding_right"
        android:backgroundTint="@color/but_main_col"
        android:text="@string/support"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/setting_but_text_size"
        app:icon="@drawable/support"
        app:iconGravity="end"
        app:iconTint="@color/settings_icon_color" />

    <Button
        android:id="@+id/button6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/setting_but_padding_left"
        android:paddingRight="@dimen/setting_but_padding_right"
        android:backgroundTint="@color/but_main_col"
        android:text="@string/offer"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/setting_but_text_size"
        app:icon="@drawable/forward"
        app:iconGravity="end"
        app:iconTint="@color/settings_icon_color" />

</LinearLayout>