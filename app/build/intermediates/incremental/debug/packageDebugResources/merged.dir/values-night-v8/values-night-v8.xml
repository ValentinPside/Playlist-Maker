<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainActivity" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@color/YP_Black</item>
    </style>
    <style name="SearchActivityTop" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@color/YP_Black</item>
        <item name="android:textColor">@color/YP_White</item>
    </style>
    <style name="SearchButText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/YP_White</item>
        <item name="android:textColor">@color/YP_Black</item>
        <item name="android:textSize">@dimen/search_but_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">@dimen/search_but_corner_rad</item>
        <item name="tint">@color/YP_White</item>
    </style>
    <style name="SearchCommunicationProblem">
        <item name="android:src">@drawable/communication_problem</item>
    </style>
    <style name="SearchEditText" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:backgroundTint">@color/YP_White</item>
        <item name="android:background">@color/YP_White</item>
        <item name="tint">@color/YP_Black</item>
        <item name="android:textColorHint">@color/YP_Black</item>
    </style>
    <style name="SearchNothingFound">
        <item name="android:src">@drawable/nothing_found</item>
    </style>
    <style name="SettingsActivityTop" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@color/YP_Black</item>
        <item name="android:textColor">@color/YP_White</item>
        <item name="tint">@color/YP_White</item>
    </style>
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        
        <item name="colorPrimary">@color/purple_200</item>
        <item name="backgroundColor">@color/YP_Black</item>
        <item name="background">@color/YP_Black</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <item name="colorSecondary">#FFFFFF</item>
        <item name="colorSecondaryVariant">#1A1B22</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
    </style>
    <style name="primary_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/YP_White</item>
        <item name="android:textSize">@dimen/primary_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="rvForwardStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="tint">@color/YP_White</item>
    </style>
    <style name="rvLilTextStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@color/YP_White</item>
        <item name="android:textColorHint">@color/YP_White</item>
        <item name="tint">@color/YP_White</item>
    </style>
    <style name="rvTextStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@color/YP_White</item>
        <item name="android:textColorHint">@color/YP_White</item>
        <item name="tint">@color/YP_White</item>
    </style>
</resources>