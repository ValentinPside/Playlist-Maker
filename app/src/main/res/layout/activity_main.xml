<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_col"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:text="@string/title"
        android:textAppearance="@style/title"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/main_but_margin_left_and_right"
        android:layout_marginTop="40dp"
        android:layout_marginRight="@dimen/main_but_margin_left_and_right"
        android:layout_weight="1"
        android:backgroundTint="@color/but_main_col"
        android:text="@string/search"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/main_but_text_size"
        app:cornerRadius="@dimen/setting_but_radius"
        app:icon="@drawable/search"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_but_padding"
        app:iconTint="@color/black" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/main_but_margin_left_and_right"
        android:layout_marginRight="@dimen/main_but_margin_left_and_right"
        android:layout_weight="1"
        android:backgroundTint="@color/but_main_col"
        android:text="@string/library"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/main_but_text_size"
        app:cornerRadius="@dimen/setting_but_radius"
        app:icon="@drawable/library"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_but_padding"
        app:iconTint="@color/black" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/main_but_margin_left_and_right"
        android:layout_marginRight="@dimen/main_but_margin_left_and_right"
        android:layout_marginBottom="28dp"
        android:layout_weight="1"
        android:backgroundTint="@color/but_main_col"
        android:text="@string/settings"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/main_but_text_size"
        app:cornerRadius="@dimen/setting_but_radius"
        app:icon="@drawable/settings"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_but_padding"
        app:iconTint="@color/black" />

</LinearLayout>