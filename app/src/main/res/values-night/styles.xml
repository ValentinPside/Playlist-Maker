<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="primary_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/YP_White</item>
        <item name="android:textSize">@dimen/primary_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SearchNothingFound">
        <item name="android:src">@drawable/nothing_found</item>
    </style>

    <style name="SearchCommunicationProblem">
        <item name="android:src">@drawable/communication_problem</item>
    </style>

    <style name="SearchButText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/search_but_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">@dimen/search_but_corner_rad</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="AudioPlayerPlayBut">
        <item name="android:src">@drawable/audioplayrplaybuttonnight</item>
    </style>

    <style name="AudioPlayerPauseBut">
        <item name="android:src">@drawable/pausebuttonnight</item>
    </style>

    <style name="AudioPlayerLeftText">
        <item name="android:textColor">@color/YP_Text_Gray</item>
        <item name="android:textSize">@dimen/audioplayer_description_text_size</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="AudioPlayerRightText">
        <item name="android:textColor">@color/YP_White</item>
        <item name="android:textSize">@dimen/audioplayer_description_text_size</item>
        <item name="android:gravity">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="YPTextBW">
        <item name="android:textColor">@color/YP_White</item>
    </style>

    <style name="bottom_navigation_view" >
        <item name="android:textColor">@color/YP_White</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/YP_Black</item>
        <item name="itemIconTint">@drawable/bottom_navigation_tab_bar_dark</item>
        <item name="itemTextColor">@drawable/bottom_navigation_tab_bar_dark</item>
    </style>

    <style name="AudioPlayerLeftButton">
        <item name="android:src">@drawable/player_add_button</item>
    </style>

    <style name="TabText">
        <item name="tabTextColor">@color/YP_White</item>
        <item name="tabIndicatorColor">@color/YP_White</item>
    </style>

    <style name="new_playlist_toolbar_text">
        <item name="android:textColor">@color/YP_White</item>
    </style>

    <style name="BackIcon">
        <item name="navigationIcon">@drawable/vector_dark</item>
    </style>

    <style name="new_playlist_text_shape">
        <item name="android:background">@drawable/text_shape_night</item>
        <item name="android:textColorHint">@color/YP_White</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SettingsLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <style name="SwitchStyle" parent="Theme.PlaylistMaker">
        <item name="android:thumbTint">@color/YP_Blue</item>
        <item name="android:trackTint">@color/YP_Blue</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>


</resources>