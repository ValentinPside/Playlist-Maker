<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="primary_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/YP_White</item>
        <item name="android:textSize">@dimen/primary_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SearchNothingFound">
        <item name="android:src">@drawable/nothing_found</item>
    </style>

    <style name="SearchCommunicationProblem">
        <item name="android:src">@drawable/communication_problem</item>
    </style>

    <style name="SearchButText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/YP_White</item>
        <item name="android:textColor">@color/YP_Black</item>
        <item name="android:textSize">@dimen/search_but_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">@dimen/search_but_corner_rad</item>
        <item name="tint">@color/YP_White</item>
    </style>

    <style name="AudioPlayerPlayBut">
        <item name="android:src">@drawable/audioplayrplaybuttonnight</item>
    </style>

    <style name="AudioPlayerPauseBut">
        <item name="android:src">@drawable/pausebuttonnight</item>
    </style>

    <style name="AudioPlayerLeftText">
        <item name="android:textColor">@color/YP_Text_Gray</item>
        <item name="android:textSize">@dimen/audioplayer_description_text_size</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="AudioPlayerRightText">
        <item name="android:textColor">@color/YP_White</item>
        <item name="android:textSize">@dimen/audioplayer_description_text_size</item>
        <item name="android:gravity">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    android:maxLines="1"
    android:ellipsize="end"

    <style name="YPTextBW">
        <item name="android:textColor">@color/YP_White</item>
    </style>

</resources>