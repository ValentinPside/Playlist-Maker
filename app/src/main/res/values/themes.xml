<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/black</item>
        <item name="background">@color/white</item>
        <item name="colorPrimary">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MainActivity" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    </style>
    <style name="SettingsActivityTop" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@color/YP_Black</item>
        <item name="tint">@color/YP_Black</item>
    </style>
    <style name="SearchActivityTop" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@color/YP_White</item>
        <item name="android:textColor">@color/YP_Black</item>
    </style>
    <style name="MediatecaActivityTop" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@color/YP_Black</item>
    </style>
    <style name="SearchEditText" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:backgroundTint">@color/YP_Light_Gray</item>
        <item name="android:background">@color/YP_Light_Gray</item>
        <item name="tint">@color/YP_Text_Gray</item>
        <item name="android:textColorHint">@color/YP_Text_Gray</item>
    </style>
    <style name="rvLilTextStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@color/YP_Text_Gray</item>
        <item name="android:textColorHint">@color/YP_Text_Gray</item>
        <item name="tint">@color/YP_Text_Gray</item>
    </style>
    <style name="rvTextStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@color/YP_Black</item>
        <item name="android:textColorHint">@color/YP_Black</item>
        <item name="tint">@color/YP_Black</item>
    </style>
    <style name="rvForwardStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="tint">@color/YP_Text_Gray</item>
    </style>

    <style name="PlayListInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/main_col</item>
        <item name="hintTextColor">@color/main_col</item>
        <item name="colorAccent">@color/main_col</item>
    </style>

    <style name="PlayListEditTextStyle" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="colorControlNormal">@color/main_col</item>
        <item name="colorControlActivated">@color/main_col</item>
    </style>

    <style name="ColoredButton" parent="Widget.Material3.Button">
        <item name="android:textColor">@drawable/btn_selector</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheet</item>
    </style>

    <style name="ModalBottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearance">@drawable/rounded_dialog</item>
    </style>

    <style name="SettingsActivityIcon" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="tint">@color/settings_icon_color</item>
        <item name="android:trackTint">@color/settings_icon_color</item>
        <item name="android:thumbTint">@color/settings_icon_color</item>
    </style>

    <style name="bottomSheetStyle">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

    <style name="dividerStyle">
        <item name="android:background">@drawable/create_button_background_gray</item>
    </style>

</resources>