        <item name="background">@color/main_col</item>
        <item name="colorPrimaryVariant">@color/main_col</item>
        <item name="colorOnPrimary">@color/settings_icon_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_col</item>
        <item name="colorSecondaryVariant">@color/main_col</item>
        <item name="colorOnSecondary">@color/main_col</item>
